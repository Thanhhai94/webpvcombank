<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="container-fluid login-page">
        <div class="row logo">
            <div class="col-12">
                <img src="/img/Logo_PVcombank.png" alt="" style="width: 200px;">
            </div>
        </div>
        <div class="row title">
            <div class="col-12">
                <h4>Phòng kế hoạch và quản lý hiệu quả công việc - Khối Tài chính kế toán</h4>
            </div>
        </div>
        <div class="formLogin">
            <form action="/login" method="POST" class="form">
                <h1>Đăng nhập</h1>
                <div class="form-control-pv">
                    <input id="username" name="username" type="text"  placeholder="Tên đăng nhập">
                </div>
                <div class="form-control-pv">
                    <input id="password" name="password" type="password" placeholder="Mật khẩu">
                </div>
                <div class="form-button">
                    <button type="submit" class="btn btn-secondary">ĐĂNG NHẬP</button>
                </div>
            </form>
        </div>
    </div>

<%- include('includes/end.ejs') %>